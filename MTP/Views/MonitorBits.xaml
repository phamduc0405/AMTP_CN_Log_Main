<UserControl x:Class="ACO2_App._0.Views.MonitorBits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACO2_App._0.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <DockPanel LastChildFill="True">
                    <Border
                    Height="30"
                    Margin="5"
                    Background="CornflowerBlue"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5"
                    DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource ManualButtonText}" Text="PLC -&gt; PC" />
                    </Border>
                    <WrapPanel x:Name="wrpInput" Orientation="Vertical" />
                </DockPanel>

            </Grid>
            <Grid Grid.Column="1">
                <DockPanel LastChildFill="True">
                    <Border
                    Height="30"
                    Margin="5"
                    Background="CornflowerBlue"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5"
                    DockPanel.Dock="Top">
                        <TextBlock Style="{StaticResource ManualButtonText}" Text="PC -&gt; PLC" />
                    </Border>
                    <WrapPanel x:Name="wrpOutput" Orientation="Vertical" />
                </DockPanel>

            </Grid>
        </Grid>



    </Grid>
</UserControl>
