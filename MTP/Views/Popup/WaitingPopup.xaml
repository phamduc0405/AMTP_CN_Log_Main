<Window
    x:Class="ACO2.Views.Popup.WaitingPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ACO2.Views.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Waiting"
    Width="200"
    Height="200"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <Storyboard x:Key="BeatFadeAnimation">
            <!--  Scale Animation for Beat Effect  -->
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                From="1"
                To="1.2"
                Duration="0:0:0.5" />
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                From="1"
                To="1.2"
                Duration="0:0:0.5" />

            <!--  Opacity Animation for Fade Effect  -->
            <DoubleAnimation
                AutoReverse="True"
                RepeatBehavior="Forever"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0.5"
                Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>

    <Grid
        Width="120"
        Height="120"
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <Image x:Name="icon" Source="/images/Asoft_Logo_NoCmt.png">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                    <TranslateTransform />
                </TransformGroup>
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Image.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource BeatFadeAnimation}" />
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </Grid>

</Window>
