<Window
    x:Class="MTP.Views.Popup.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MTP.Views.Popup"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:style="clr-namespace:ACO2_App.Style"
    Title="LoginView"
    Width="300"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Width="300"
        Height="400"
        Background="AliceBlue"
        BorderBrush="LightSlateGray"
        BorderThickness="2"
        CornerRadius="20">
        <StackPanel Orientation="Vertical">
            <TextBlock
                Height="30"
                Style="{StaticResource HeaderTextBlockStyle}"
                Text="Login"
                TextAlignment="Center" />
            <Grid VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Margin="0,15"
                    HorizontalAlignment="Left"
                    Style="{StaticResource HeaderTextBlockStyle}"
                    Text="User Name" />
                <Grid Grid.Row="1" Height="50">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <RadioButton
                        x:Name="btnAdmin"
                        Grid.Column="0"
                        Width="100"
                        Height="50"
                        Background="#FF5EA1C5"
                        Content="ADMIN"
                        Style="{StaticResource TabRadioButtonStyle}" />
                    <RadioButton
                        x:Name="btnOperator"
                        Grid.Column="1"
                        Width="100"
                        Height="50"
                        Background="#FF5EA1C5"
                        Content="OPERATOR"
                        Style="{StaticResource TabRadioButtonStyle}" />
                    <RadioButton
                        x:Name="btnEngineer"
                        Grid.Column="2"
                        Width="100"
                        Height="50"
                        Background="#FF5EA1C5"
                        Content="ENGINEER"
                        Style="{StaticResource TabRadioButtonStyle}" />
                </Grid>
                <TextBlock
                    Grid.Row="2"
                    Margin="5,15"
                    HorizontalAlignment="Left"
                    Style="{StaticResource HeaderTextBlockStyle}"
                    Text="Password" />
                <style:FloatingHintRevealPasswordBox
                    x:Name="txtPass"
                    Grid.Row="3"
                    Width="280"
                    Height="40"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left" />
                <Button
                    x:Name="btnLogIn"
                    Grid.Row="4"
                    Height="35"
                    Margin="5,20,5,0"
                    Background="#FFDDE3E8"
                    Content="Login"
                    Style="{StaticResource ButtonControl}"
                    Tag="SignIn" />
            </Grid>
            <StackPanel
                Margin="10,70,5,0"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    x:Name="btnLogOut"
                    Height="20"
                    HorizontalAlignment="Left"
                    Background="#FFDDE3E8"
                    Content="LogOut"
                    Style="{StaticResource ButtonControl}"
                    Tag="SignOut" />
                <Button
                    x:Name="btnEsc"
                    Height="20"
                    Margin="100,0,0,0"
                    HorizontalAlignment="Right"
                    Background="#FFDDE3E8"
                    Content="Back"
                    Style="{StaticResource ButtonControl}"
                    Tag="Xmark" />
            </StackPanel>

        </StackPanel>

    </Border>
</Window>
