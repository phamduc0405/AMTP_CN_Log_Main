<Window x:Class="ACO2.Views.Popup.PopUpNotification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ACO2.Views.Popup"
        mc:Ignorable="d"
        Title="PopUpNotification"
        Width="800"
        Height="500"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        >
    <Border Margin="0,0,0,-6"
            CornerRadius="3">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0"
                                 EndPoint="0.5,1">
                <GradientStop Color="Red" />
                <GradientStop Offset="1"
                              Color="White" />
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <TextBlock x:Name="txtBox"
                       Width="780"
                       Height="280"
                       Margin="0,71,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       FontSize="20"
                       FontWeight="Bold">

            </TextBlock>
            <Label x:Name="txtHeader"
                   Width="352"
                   Height="56"
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   Content="NOTIFICATION"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFFDFF00" />
            <Button x:Name="btnYes"
                    Width="166"
                    Height="60"
                    Margin="91,378,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    VerticalContentAlignment="Center"
                    Content="YES"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource ButtonSave}" />
            <Button x:Name="btnNo"
                    Width="166"
                    Height="60"
                    Margin="534,378,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="NO"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource ButtonSave}" />
            <Button x:Name="btnOk"
                    Width="166"
                    Height="60"
                    Margin="0,378,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Content="OK"
                    FontSize="20"
                    FontWeight="Bold"
                    Style="{StaticResource ButtonSave}" />
        </Grid>



    </Border>
</Window>
