<UserControl
    x:Class="ACO2.Views.Data.DataProductView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ACO2.Views.Data"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.3*" />
                <ColumnDefinition Width="1.3*" />
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="1.2*" />
            </Grid.ColumnDefinitions>


            <Grid Grid.Column="0" Grid.ColumnSpan="3">
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="SELECT ZONE " />
                    <ComboBox
                        x:Name="cbbEquipment"
                        Height="40"
                        Margin="0,0,5,0"
                        Style="{StaticResource ComboBoxFlatStyle}" />
                    <TextBlock
                        Margin="5,0,0,0"
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="From : " />
                    <DatePicker
                        x:Name="dtpStart"
                        Width="170"
                        Height="30"
                        Margin="0,8,5,3"
                        SelectedDateFormat="Long" />
                    <TextBlock
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="To : " />
                    <DatePicker
                        x:Name="dtpEnd"
                        Width="170"
                        Height="30"
                        Margin="0,8,10,3"
                        SelectedDateFormat="Long" />
                    <Button
                        x:Name="btnLoad"
                        Width="190"
                        Content="Load"
                        Style="{StaticResource ButtonControl}"
                        Tag="Refresh" />

                </StackPanel>

            </Grid>
            <Grid Grid.Column="3" Grid.ColumnSpan="2">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <TextBox
                        x:Name="txtSearch"
                        Width="250" FontSize="20"
                        Margin="0,0,10,0"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource TextBoxStandard}"
                        TextAlignment="Center" />
                    <Button
                        x:Name="btnSearch"
                        Width="170"
                        HorizontalAlignment="Left"
                        Content="SEARCH"
                        Style="{StaticResource ButtonControl}"
                        Tag="Search" />


                </StackPanel>

            </Grid>


        </Grid>
        <!--  ===============================================  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <!--<ColumnDefinition Width="1*"/>-->
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="0*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <ScrollViewer Grid.Row="1"
                                  HorizontalScrollBarVisibility="Auto">

                        <ListView x:Name="listView"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Stretch"
                                  Style="{StaticResource ListViewStyle}">
                            <ListView.View>
                                <GridView x:Name="grdView" />
                            </ListView.View>

                        </ListView>
                    </ScrollViewer>

                </Grid>


            </Grid>
            <!--  ===============================  -->

        </Grid>
    </Grid>
</UserControl>
