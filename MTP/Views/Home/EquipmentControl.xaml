<UserControl
    x:Class="MTP.Views.Home.EquipmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MTP.Views.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Border
            Margin="5,5"
            Background="White"
            BorderBrush="Black"
            BorderThickness="0.5"
            CornerRadius="5">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0"
                    Height="50"
                    Margin="3"
                    Background="#FF7FA6EF"
                    CornerRadius="3">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            x:Name="txtHeader"
                            Margin="20,0,20,0"
                            HorizontalAlignment="Center"
                            Foreground="Black"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="EQUIPMENT" />
                        <TextBlock
                            x:Name="txtTxHostVer"
                            Margin="20,0,20,0"
                            HorizontalAlignment="Center"
                            Foreground="Green"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="" />
                    </StackPanel>

                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <WrapPanel Name="stkMain" Orientation="Horizontal" />

                </ScrollViewer>

                <Border
                    x:Name="brdMes"
                    Grid.Row="1"
                    Height="auto"
                    Margin="2"
                    Background="Red"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="5">
                    <TextBlock
                        x:Name="txtStatus"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="30"
                        FontWeight="Bold"
                        Foreground="White" />
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>
