<UserControl
    x:Class="MTP.Views.Home.ChannelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MTP.Views.Home"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid
        Width="250"
        Height="200"
        Margin="5">

        <Border
            Margin="2"
            BorderBrush="LightGray"
            BorderThickness="2"
            CornerRadius="5">


            <DockPanel LastChildFill="True">
                <Border
                    Height="30"
                    Margin="2"
                    Background="AliceBlue"
                    CornerRadius="5"
                    DockPanel.Dock="Top">
                    <TextBlock
                        Name="txtHeader"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="CH 01"
                        TextAlignment="Center" />

                </Border>

                <Grid x:Name="btnStage1Config">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="3*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Name="txtCellID"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="6"
                        FontSize="13"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        TextAlignment="Center"
                        TextWrapping="WrapWithOverflow" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="Total:" />
                    <TextBlock
                        x:Name="txtChTotal"
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        FontSize="15"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="0"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtChOK"
                        Grid.Row="2"
                        Grid.Column="0"
                        FontSize="15"
                        Foreground="Green"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="0"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtChContactNG"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="15"
                        Foreground="DarkRed"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="0"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtCInspNG"
                        Grid.Row="2"
                        Grid.Column="2"
                        FontSize="15"
                        Foreground="DarkRed"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="0"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtPerChOK"
                        Grid.Row="3"
                        Grid.Column="0"
                        FontSize="10"
                        Foreground="Green"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="(0%)"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtPerChContactNG"
                        Grid.Row="3"
                        Grid.Column="1"
                        FontSize="10"
                        Foreground="DarkRed"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="(0%)"
                        TextAlignment="Center" />
                    <TextBlock
                        x:Name="txtPerChInsNG"
                        Grid.Row="3"
                        Grid.Column="2"
                        FontSize="10"
                        Foreground="DarkRed"
                        Style="{StaticResource HeaderTextBlockStyle}"
                        Text="(0%)"
                        TextAlignment="Center" />
                    <Border
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="auto"
                        Margin="2"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5">

                        <ListBox
                            x:Name="txtPopUpCh"
                            FontSize="8"
                            Style="{StaticResource ListBoxStyle}" />
                    </Border>
                    <Border
                        x:Name="brdPopup"
                        Grid.Row="1"
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="auto"
                        Margin="2"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Visibility="Hidden">
                        <TextBlock
                            x:Name="txtResult"
                            FontSize="15"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            TextAlignment="Center" />
                    </Border>

                </Grid>
            </DockPanel>

        </Border>


    </Grid>
</UserControl>
