<Window
    x:Class="ACO2_App.Views.Machine.PopupCellInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ACO2_App.Views.Machine"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MessagePopup"
    Width="800"
    Height="500"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="Gray" />
                <GradientStop Offset="1" Color="White" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <GroupBox x:Name="grbMain">
            <GroupBox.Header>
                <TextBlock
                    x:Name="grbHeader"
                    HorizontalAlignment="Center"
                    Style="{StaticResource DataStageText}"
                    Text="CELL INFORMATION"
                    TextAlignment="Center" />
            </GroupBox.Header>
            <Grid x:Name="grdMain" />
        </GroupBox>
        <Button
            x:Name="btnClose"
            Grid.Row="1"
            Width="150"
            Margin="5"
            Style="{StaticResource controlManualButton}">
            <TextBlock Style="{StaticResource ManualButtonText}" Text="CLOSE" />
        </Button>
    </Grid>

</Window>
