<UserControl x:Class="MTP.Views.Config.EquipmentConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MTP.Views.Config"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="AliceBlue">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="3*" />

        </Grid.ColumnDefinitions>
        <GridSplitter Width="1"
                      VerticalAlignment="Stretch"
                      HorizontalAlignment="Center"
                      Grid.Column="1" />

        <GroupBox Header="LIST EQP"
                  Name="grpLine">
            <StackPanel>
                <ScrollViewer HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="stkEqp">

                    </StackPanel>
                </ScrollViewer>
                <Button x:Name="btnSaveConfig"
                        Width="100"
                        Height="40"
                        Margin="10,20,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource ButtonSave}">
                    <StackPanel Width="100"
                                Orientation="Horizontal">
                        <fa:IconImage x:Name="LoadingImage"
                                      Width="25"
                                      Margin="10,0,0,0"
                                      HorizontalAlignment="Left"
                                      fa:Awesome.Spin="true"
                                      Icon="Spinner"
                                      Visibility="Hidden" />
                        <TextBlock Height="30"
                                   HorizontalAlignment="Center"
                                   Style="{StaticResource HeaderTextBlockStyle}"
                                   Text="Save" />
                    </StackPanel>
                </Button>
            </StackPanel>
          
        </GroupBox>

        <GroupBox BorderBrush="Gray"
                  Header="Equip Config"
                  BorderThickness="1"
                  Grid.Column="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid>
                    <DockPanel LastChildFill="True"
                               Name="dckMain">
                        <Border BorderBrush="Gray"
                                BorderThickness="1"
                                DockPanel.Dock="Top">
                            <DockPanel LastChildFill="True">
                                <Border Margin="3"
                                        Background="#FF7FA6EF"
                                        CornerRadius="3"
                                        DockPanel.Dock="Top">
                                    <TextBlock Grid.Column="0"
                                               Margin="10,0,0,0"
                                               HorizontalAlignment="Left"
                                               Foreground="Black"
                                               Style="{StaticResource HeaderTextBlockStyle}"
                                               Text="EQP - PC SIGNAL CONFIG" />
                                </Border>
                            </DockPanel>
                        </Border>
                        <StackPanel Orientation="Vertical">
                            <Grid x:Name="grdTCP">

                            </Grid>
                            <Grid>
                                <DockPanel LastChildFill="True">
                                    <StackPanel Orientation="Vertical">
                                        <DockPanel LastChildFill="True">
                                            <Border Margin="3"
                                                    Background="#FF7FA6EF"
                                                    CornerRadius="3"
                                                    DockPanel.Dock="Top">
                                                <TextBlock Grid.Column="0"
                                                           Margin="10,0,0,0"
                                                           HorizontalAlignment="Left"
                                                           Foreground="Black"
                                                           Style="{StaticResource HeaderTextBlockStyle}"
                                                           Text="CHANNEL" />
                                            </Border>
                                        </DockPanel>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Margin="5,0,0,0"
                                                       HorizontalAlignment="Left"
                                                       VerticalAlignment="Center"
                                                       Style="{StaticResource HeaderTextBlockStyle}"
                                                       Text="CHANNEL NO : " />
                                            <ComboBox x:Name="cbbChannelNo"
                                                      Margin="10,0,10,0"
                                                      Style="{StaticResource ComboBoxFlatStyle}" />
                                        </StackPanel>
                                    </StackPanel>
                                </DockPanel>
                            </Grid>
                        </StackPanel>
                      
                    </DockPanel>
                </Grid>
                <Grid x:Name="grdChannel"
                      Grid.Column="1">

                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
