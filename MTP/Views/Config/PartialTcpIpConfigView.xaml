<UserControl x:Class="ACO2.Views.Config.PartialTcpIpConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ACO2.Views.Config"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox x:Name="grbHeader" Header="TCPIP" Margin="10" DockPanel.Dock="Top">
        <StackPanel>
            <!--  ============ PC IP ================  -->
            <DockPanel LastChildFill="True">
                <TextBlock
Margin="30,0,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
DockPanel.Dock="Left"
Style="{StaticResource DataStageText}"
Text="IP ADDRESS : " />
                <TextBox
x:Name="txtIpAdress"
Margin="10 0"
HorizontalAlignment="Stretch"
VerticalAlignment="Center"
HorizontalContentAlignment="Stretch"
Style="{StaticResource TextBoxHintStyle1}"
Tag="127.0.0.1"
Text="" />

            </DockPanel>
            <DockPanel LastChildFill="True">
                <TextBlock
Margin="30,0,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
DockPanel.Dock="Left"
Style="{StaticResource DataStageText}"
Text="PORT : " />
                <TextBox Width="80"
x:Name="txtPort"
Margin="10,0,0,0"
HorizontalAlignment="Stretch"
VerticalAlignment="Center"
HorizontalContentAlignment="Stretch"
Style="{StaticResource TextBoxHintStyle1}"
Tag="4900"
Text="" />

                <TextBlock
Margin="30,0,0,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
Style="{StaticResource DataStageText}"
Text="ACTIVE : " />
                <ToggleButton
x:Name="tglActive"
Grid.Column="1"
HorizontalAlignment="Left"
Background="LawnGreen"
Style="{StaticResource ToggleFlipFlop}"
Tag="GreenYellow" />

            </DockPanel>
        </StackPanel>
    </GroupBox>

</UserControl>
