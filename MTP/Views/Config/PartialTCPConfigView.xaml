<UserControl x:Class="MTP.Views.Config.PartialTCPConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:MTP.Views.Config"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">
    <Grid Margin="0">


        <!-- Content for first column -->
        <!--  =============        PC CONFIG        ===============  -->
        <ScrollViewer Grid.Column="0"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0">
            <Border Margin="3 0"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="0.5"
                    CornerRadius="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="20*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Border Margin="3"
                                Background="#FF7FA6EF"
                                CornerRadius="3" />
                        <TextBlock Name="txtHeader"
                                   Grid.Column="0"
                                   Margin="20,0,0,0"
                                   HorizontalAlignment="Left"
                                   Foreground="Black"
                                   Style="{StaticResource  HeaderTextBlockStyle}"
                                   Text="TCP CONFIG" />
                    </Grid>
                    <!--  ============================  -->
                    <Border Grid.Row="1"
                            Margin="3"
                            Padding="5"
                            BorderBrush="Black"
                            BorderThickness="0.5"
                            CornerRadius="3" />
                    <StackPanel Grid.Row="1"
                                Orientation="Vertical"
                                x:Name="stackPanel">
                        <GroupBox Header="PC Signal Connection"
                                  Margin="10">
                            <StackPanel>
                                <StackPanel>
                                    <!--  ============ PC IP ================  -->
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Margin="30,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   DockPanel.Dock="Left"
                                                   Style="{StaticResource HeaderTextBlockStyle}"
                                                   Text="PC SIGNAL ADDRESS : " />
                                        <Grid x:Name="grdPCIP"
                                              Width="150"
                                              Height="20" />

                                    </DockPanel>
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Margin="30,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   DockPanel.Dock="Left"
                                                   Style="{StaticResource HeaderTextBlockStyle}"
                                                   Text="PC SIGNAL PORT : " />
                                        <TextBox Width="80"
                                                 x:Name="txtPcPort"
                                                 Margin="10,0,0,0"
                                                 HorizontalAlignment="Stretch"
                                                 VerticalAlignment="Center"
                                                 HorizontalContentAlignment="Stretch"
                                                 Style="{StaticResource TextBoxStandard}"
                                                 Tag="4900"
                                                 Text="" />

                                        <TextBlock Margin="30,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Style="{StaticResource HeaderTextBlockStyle}"
                                                   Text="ACTIVE : "
                                                   x:Name="tblActivePCSignal">
                                            <TextBlock.ToolTip>
                                                <ToolTip x:Name="ttConfigActivePCSignal"
                                                         Content=""
                                                         Style="{StaticResource tt_style}" />
                                            </TextBlock.ToolTip>

                                        </TextBlock>
                                        <ToggleButton x:Name="tglPcActive"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Left"
                                                      Background="LawnGreen"
                                                      Foreground="GreenYellow"
                                                      Style="{StaticResource ToggleFlipFlop}"
                                                      />
                                    </DockPanel>
                                    <DockPanel>
                                        <TextBlock Margin="30,0,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Style="{StaticResource HeaderTextBlockStyle}"
                                                   Text="LINE CHECK : " />
                                        <ToggleButton x:Name="tglLineCheck"
                                                      Grid.Column="1"
                                                      HorizontalAlignment="Left"
                                                      Background="LawnGreen"
                                                      Style="{StaticResource ToggleFlipFlop}"
                                                      Foreground="GreenYellow" />
                                    </DockPanel>
                                </StackPanel>
                                <Border Margin="30 5"
                                        BorderThickness="2"
                                        BorderBrush="AliceBlue"
                                        CornerRadius="3" />

                            </StackPanel>

                        </GroupBox>

                        <!--  ============================  -->
                        <Button x:Name="btnSaveDataConfig"
                                Width="200"
                                Height="50"
                                Margin="50,20"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource ButtonSave}">
                            <StackPanel Width="200"
                                        Orientation="Horizontal">
                                <fa:IconImage x:Name="LoadingDataImage"
                                              Width="25"
                                              Margin="10,0,0,0"
                                              HorizontalAlignment="Left"
                                              fa:Awesome.Spin="true"
                                              Icon="Spinner"
                                              Visibility="Hidden" />
                                <TextBlock Height="30"
                                           Margin="40,10,5,0"
                                           HorizontalAlignment="Center"
                                           Style="{StaticResource HeaderTextBlockStyle}"
                                           Text="Save" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>
        </ScrollViewer>

    </Grid>
</UserControl>
