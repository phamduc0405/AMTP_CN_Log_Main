<UserControl
    x:Class="ACO2_App.Style.FloatingHintRevealPasswordBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:ACO2_App.Style"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="40"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Border
            Width="auto"
            Height="auto"
            Background="White"
            CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="23"
                    Direction="270"
                    ShadowDepth="5"
                    Color="WhiteSmoke" />
            </Border.Effect>
            <Grid Margin="20,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="txtPassWord"
                    VerticalContentAlignment="Center"
                    Panel.ZIndex="10"
                    Style="{StaticResource TextBoxPasswordStyleNoBorder}"
                    Tag="Password" />
                <PasswordBox
                    x:Name="passbox"
                    Panel.ZIndex="2"
                    PasswordChanged="passbox_PasswordChanged"
                    Style="{StaticResource PasswordBoxStyle}" />
                <Button
                    x:Name="ShowPass"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Panel.ZIndex="3"
                    Background="Transparent"
                    BorderThickness="0"
                    Style="{StaticResource ButtonTransparent}"
                    Tag="Eye" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
