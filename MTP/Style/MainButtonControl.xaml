<UserControl
    x:Class="ACO2_App.Style.MainButtonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ACO2_App.Style"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="3*" />

            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />

        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Margin="3"
            CornerRadius="0">
            <TextBlock
                FontSize="15"
                FontWeight="Bold"
                Text="EQ STATUS"
                TextAlignment="Center" />
        </Border>
        <Border
            x:Name="lbPowerOn"
            Grid.Row="1"
            Margin="3"
            Background="Green"
            CornerRadius="5">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Bold"
                Text="POWER ON"
                TextAlignment="Center" />
        </Border>
        <Border
            x:Name="lbSafety"
            Grid.Row="2"
            Margin="3"
            Background="Green"
            CornerRadius="5">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Bold"
                Text="SAFETY"
                TextAlignment="Center" />
        </Border>
        <Border
            x:Name="lbAlarm"
            Grid.Row="3"
            Margin="3"
            Background="Red"
            CornerRadius="5">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Bold"
                Text="ALARM"
                TextAlignment="Center" />
        </Border>
        <Border
            x:Name="lbHome"
            Grid.Row="4"
            Margin="3"
            Background="Yellow"
            CornerRadius="5">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="15"
                FontWeight="Bold"
                Text="HOME"
                TextAlignment="Center" />
        </Border>
        <Border
            Grid.Row="5"
            Margin="3"
            CornerRadius="0">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Text="----------------------------"
                TextAlignment="Center" />
        </Border>
