<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:ACO2.Style">

    <local:ProgressWidthConverter x:Key="ProgressWidthConverter" />
    <local:ProgressHeightConverter x:Key="ProgressHeightConverter" />
    <local:CircularProgressConverter x:Key="CircularProgressConverter" />
    <local:CircularPathConverter x:Key="CircularPathConverter" />
    <!--  Progress Bar Horizontal  -->
    <Style x:Key="ProgressHorizontalStyle" TargetType="ProgressBar">
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Border
                            Name="PART_Border"
                            Padding="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="2">
                            <!--  Background  -->
                            <Border.Background>
                                <SolidColorBrush Color="#FFA906DC" />
                            </Border.Background>
                            <Grid>
                                <!--  Progress Indicator  -->
                                <Rectangle
                                    Name="PART_Indicator"
                                    Height="{TemplateBinding Height}"
                                    HorizontalAlignment="Left"
                                    Fill="#FF6A0DAD">
                                    <Rectangle.Width>
                                        <MultiBinding Converter="{StaticResource ProgressWidthConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}" />
                                        </MultiBinding>
                                    </Rectangle.Width>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Trigger for IsIndeterminate  -->
                        <Trigger Property="IsIndeterminate" Value="true">
                            <Setter TargetName="PART_Indicator" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Offset="0.0" Color="#FF00FF00" />
                                        <GradientStop Offset="1.0" Color="#FF00CC00" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="PART_Indicator"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                            From="0"
                                            To="200"
                                            Duration="0:0:1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Progress Bar Vertical  -->
    <Style x:Key="ProgressVerticalStyle" TargetType="ProgressBar">
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Border
                            Name="PART_Border"
                            Padding="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="2">
                            <!--  Background  -->
                            <Border.Background>
                                <SolidColorBrush Color="#FFA906DC" />
                            </Border.Background>
                            <Grid>
                                <!--  Progress Indicator  -->
                                <Rectangle
                                    Name="PART_Indicator"
                                    Width="{TemplateBinding Width}"
                                    VerticalAlignment="Bottom"
                                    Fill="#FF6A0DAD">
                                    <Rectangle.Height>
                                        <MultiBinding Converter="{StaticResource ProgressHeightConverter}">
                                            <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                            <Binding Path="ActualHeight" RelativeSource="{RelativeSource TemplatedParent}" />
                                        </MultiBinding>
                                    </Rectangle.Height>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--  Trigger for IsIndeterminate  -->
                        <Trigger Property="IsIndeterminate" Value="true">
                            <Setter TargetName="PART_Indicator" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Offset="0.0" Color="#FF00FF00" />
                                        <GradientStop Offset="1.0" Color="#FF00CC00" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation
                                            Storyboard.TargetName="PART_Indicator"
                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                            From="0"
                                            To="-200"
                                            Duration="0:0:1" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Progress Bar Indeterminate Style  -->
    <Style
        x:Key="ProgressBarIndeterminateStyle"
        BasedOn="{StaticResource {x:Type ProgressBar}}"
        TargetType="ProgressBar">
        <Setter Property="Foreground" Value="#FF6A0DAD" />
        <Setter Property="Background" Value="#FFA906DC" />
    </Style>

    <!--  Slider Style  -->
    <Style x:Key="SliderThumbStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="false" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border>
                        <Grid>
                            <Ellipse
                                Name="Ellipse"
                                Width="18"
                                Height="18"
                                Fill="BlueViolet"
                                StrokeThickness="1" />
                            <Ellipse
                                Name="Ellipse1"
                                Width="18"
                                Height="18"
                                Panel.ZIndex="1"
                                Fill="BlueViolet"
                                StrokeThickness="1" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Ellipse" Property="Fill" Value="#FF9242CD" />
                            <Setter TargetName="Ellipse" Property="Opacity" Value="0.5" />
                            <Setter TargetName="Ellipse" Property="Width" Value="30" />
                            <Setter TargetName="Ellipse" Property="Height" Value="30" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SliderStyle" TargetType="Slider">
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Name="row" Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Name="column" Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Name="PART_Border"
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Padding="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Background="#FFA906DC"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="2" />
                        <Track
                            Name="PART_Track"
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource SliderThumbStyle}" />
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>