<UserControl
    x:Class="ACO2_App._0.Style.WordComment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ACO2_App._0.Style"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5,0,10,0">
        <DockPanel LastChildFill="True">
            <Border
                Margin="2"
                BorderBrush="LightSlateGray"
                BorderThickness="2"
                CornerRadius="5"
                DockPanel.Dock="Right">
                <TextBlock
                    x:Name="txtValue"
                    Width="100"
                    Height="30"
                    Margin="0,15,0,0"
                    HorizontalAlignment="Center"
                    Style="{StaticResource HeaderTextBlockStyle}"
                    Text="Space"
                    TextAlignment="Center" />
            </Border>
            <Border
                Margin="2"
                BorderBrush="LightSlateGray"
                BorderThickness="2"
                CornerRadius="5">
                <Grid>
                    <DockPanel LastChildFill="True">

                        <TextBlock
                            x:Name="txtAddress"
                            Height="30"
                            Margin="10,20,0,0"
                            DockPanel.Dock="Left"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="Space" />
                        <TextBlock
                            x:Name="txtLength"
                            Height="30"
                            Margin="10,20,0,0"
                            DockPanel.Dock="Left"
                            Style="{StaticResource HeaderTextBlockStyle}"
                            Text="Space" />
                        <TextBox
                            x:Name="txtComment"
                            Height="30"
                            Margin="-5,7,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Style="{StaticResource TextBoxHintStyleNoBorder}"
                            Text="Space" />
                    </DockPanel>

                </Grid>

            </Border>
        </DockPanel>

    </Grid>
</UserControl>
